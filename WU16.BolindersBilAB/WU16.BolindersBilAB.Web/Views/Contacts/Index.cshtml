@model ContactsViewModel


<div class="container-fluid">

    <div class="row">
        <div class="col-1" style="background-color:#e8eff1;">

        </div>
        <div class="col-lg-5 col-md-12 col-sm-12 px-md-5 pb-5" style="background-color:#e8eff1;">
            <h2 class="mt-4 mb-4 text-center">Våra Anläggningar</h2>
            @foreach (var item in Model.Locations)
            {
                <div class="mt-5">
                    <h4>@item.Name </h4>
                    <p>Adress: @item.Address, @item.Zip, @item.City</p>
                    <p>Telefon: @item.PhoneNumber</p>
                    <p class="mt-0">E-Mail: <a href="mailto:@item.Email ">@item.Email</a></p>
                </div>
                <div>
                    <iframe class="col-12"
                            height="200"
                            frameborder="0" style="border:0"
                            src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAMvZHNncXZ93dbj6MZqOf3mCmPSP_rpes&q=@item.City,@item.Address" allowfullscreen></iframe>
                </div>
            }

        </div>
        <div class="col-1">

        </div>
        <div class="col-lg-4 col-md-12 col-sm-12 px-md-2 px-md-5 pb-5">
            @if (Model.Sent != null)
            {
                if ((bool)Model.Sent)
                {
                    <div class="alert alert-success">Email skickat.</div>
                }
                else
                {
                    <div class="alert alert-danger">Email skickades inte!</div>
                }
            }
            <h2 class="mt-4 mb-4 text-center">Kontakt forumulär</h2>
            <form asp-action="Index">
                <div class="form-group">

                    <select class="form-control" name="Reciever">
                        <option value="">-Välj-</option>

                        @foreach (var item in Model.Locations)
                        {

                            <option value="@item.Email">@item.City</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <input name="FirstName" placeholder="Förnamn" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <input name="LastName" placeholder="Efternamn" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <input name="email" placeholder="E-Mailadress" type="email" class="form-control" />
                </div>
                <div class="form-group">
                    <input name="subject" placeholder="Ämne" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <textarea name="Message" placeholder="Meddelande" class="form-control"></textarea>
                </div>

                <input class="btn float-right btn-primary" type="submit" />
            </form>

        </div>
    </div>

</div>
