@model CarListViewModel
@{
    ViewData["Title"] = "Bilar";
}

<h2>Bilar</h2>

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <form asp-action="Cars" method="get">
                <div class="form-row">
                    <div class="form-group col-lg-2">
                        <label class="col-form-label">Årsmodell från</label>
                        <select asp-for="Query.YearFrom" class="form-control">
                            <option value="">-</option>
                            @foreach(var row in ViewBag.Years)
                            {
                                <option value="@row.Key">@row.Value</option>

                            }
                        </select>
                    </div>
                    <div class="form-group col-lg-2">
                        <label for="inputEmail4" class="col-form-label">Årsmodell till</label>
                        <select asp-for="Query.YearTo" class="form-control">
                            <option value="">-</option>
                            @foreach(var row in ViewBag.Years)
                            {
                                <option value="@row.Key">@row.Value</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-lg-2">
                        <label for="inputEmail4" class="col-form-label">Pris från</label>
                        <select asp-for="Query.PriceFrom" class="form-control">
                            <option value="">-</option>
                            @foreach(var row in ViewBag.Prices)
                            {
                                <option value="@row.Key">@row.Value</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-lg-2">
                        <label for="inputEmail4" class="col-form-label">Pris till</label>
                        <select asp-for="Query.PriceTo" class="form-control">
                            <option value="">-</option>
                            @foreach (var row in ViewBag.Prices)
                            {
                                <option value="@row.Key">@row.Value</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-lg-2">
                        <label for="inputEmail4" class="col-form-label">Mil från</label>
                        <select asp-for="Query.MilageFrom" class="form-control">
                            <option value="">-</option>
                            @foreach(var row in ViewBag.Milages)
                            { 
                                <option value="@row.Key">@row.Value</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-lg-2">
                        <label for="inputEmail4" class="col-form-label">Mil till</label>
                        <select asp-for="Query.MilageTo" class="form-control">
                            <option value="">-</option>
                                @foreach(var row in ViewBag.Milages)
                                { 
                                    <option value="@row.Key">@row.Value</option>
                                }
                        </select>
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-lg-4">
                        <label>Karosstyp</label>
                        <select id="carType" asp-for="Query.CarType" class="form-control" multiple="multiple">
                            @foreach (var type in Enum.GetNames(typeof(CarType)))
                            {
                                <option>@type</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-lg-4">
                        <label>Drivmedel</label>
                        <select id="fuelType" asp-for="Query.FuelType" class="form-control" multiple="multiple">
                            @foreach (var type in Enum.GetNames(typeof(FuelType)))
                            {
                                <option>@type</option>
                            }
                        </select>
                    </div>
                    <div class="form-group col-lg-4">
                        <label>Växellåda</label>
                        <select id="gearbox" asp-for="Query.Gearbox" class="form-control" multiple="multiple">
                            @foreach (var type in Enum.GetNames(typeof(Gearbox)))
                            {
                                <option>@type</option>
                            }
                        </select>
                    </div>
                </div>

                <button type="submit" class="btn btn-primary">Sök</button>
            </form>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            @if(Model.Cars.Count > 0)
            {
                @foreach(var car in Model.Cars)
                { 
                    <a href="/bil/@car.LicenseNumber"><div class="card">
                        <div class="card-header">
                            @car.CarBrand.BrandName - @car.Model - @car.ModelYear
                        </div>
                        <div class="card-body">
                        </div>
                    </div></a>
                }

                <div id="pager" data-page="@Model.Pager.CurrentPage" page-action="Cars" page-model="@Model.Pager"></div>
            }
            else
            {
                <div class="card">
                    <div class="card-body">
                        Inga bilar hittades.
                    </div>
                </div>
            }
        </div>
    </div>
</div>

