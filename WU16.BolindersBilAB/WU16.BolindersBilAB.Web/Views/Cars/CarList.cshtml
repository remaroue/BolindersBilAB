@model List<Car>

@{
    ViewData["Title"] = "Admin | Bilar";
}



@*<p>
    <a asp-action="Create">Create New</a>
</p>*@
<div class="container-fluid">
    <h2 class="text-center mt-2">Bilar</h2>
    <div class="row flex-column">
        <div class="col-lg-12">
            <div class="d-flex justify-content-end">
                <button class="btn btn-primary mr-auto">Skapa bil</button>
                <div class="btn-group">
                    <button class="btn btn-info">Uppdatera</button>
                    <button class="btn btn-danger">Ta bort</button>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-lg-12 d-flex justify-content-center">
            <table id="ListAllCarsTable" class="table table-striped table-bordered" cellspacing="0">
                <thead>
                    <tr>
                        <th>Bilmärke</th>
                        <th>Modell</th>
                        <th>Registreringsnummer</th>
                        <th>Plats</th>
                        <th colspan="2"></th>



                    </tr>
                </thead>
                <tbody>
                    @foreach (var car in Model)
            {
                        <tr>
                            <td>
                                @car.CarBrand.BrandName
                            </td>

                            <td>
                                @car.Model
                            </td>
                            <td>
                                @car.LicenseNumber
                            </td>
                            <td>
                                @car.Location.Name
                            </td>
                            <td>
                                <a class="btn btn-primary"><span class="fa fa-edit"></span></a>
                            </td>
                            <td width="25px" class="pt-4" colspan="1">
                                <input type="checkbox" class="custom-checkbox float-right" value="@car.LicenseNumber" />
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
